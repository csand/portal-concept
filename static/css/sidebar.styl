collapsed-width = 4.2em
expanded-width = 400px

#sidebar
  background-color: #2C2C2C
  float: left
  width: collapsed-width
  height: 100%
  color: #717171
  overflow-x: hidden
  overflow-y: scroll
  transition: width 400ms ease 300ms, box-shadow 400ms linear 300ms
  margin-right: -(collpased-width)
  box-shadow: inset 0 0 40px black

  &:hover
    transition: width 550ms cubic-bezier(0.6, -0.18, 0.735, 0.045) 300ms, box-shadow 550ms linear 300ms
    width: expanded-width
    box-shadow: inset 0 0 20px #101010

  & > *
    width: expanded-width

  .logo
    box-sizing: border-box
    padding-left: 2.0em

  nav

    ul
      list-style-type: none
      margin: 0
      padding: 0
      border-top: 1px solid #000000
      border-bottom: 1px solid #666666

    li
      border-top: 1px solid #555555
      border-bottom: 1px solid #000000
      height: 2.0em
      line-height: 2.0em
      padding-left: 1.6em

      &:hover
        background-color: #3F3F3F

    a
      text-decoration: none
      color: inherit

      &:hover
        color: #FFFFFF
