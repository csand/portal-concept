collapsed-width = 3.3em
expanded-width = 21.5em

#sidebar
  flex: 0 0 auto
  background-color: #2C2C2C
  background-image: url(../img/dark_wall/dark_wall.png)
  width: collapsed-width
  color: #717171
  overflow-x: hidden
  overflow-y: hidden
  transition: width 400ms ease 300ms, box-shadow 400ms linear 300ms
  box-shadow: inset 0 0 48px black

  &:hover
    transition: width 550ms cubic-bezier(0.6, -0.18, 0.735, 0.045) 300ms, box-shadow 550ms linear 300ms
    width: expanded-width
    box-shadow: inset 0 0 24px #000000
    overflow-y: auto

  & > *
    width: expanded-width

  .logo
    box-sizing: border-box
    padding-left: 2.0em

  nav

    ul
      list-style-type: none
      margin: 0
      padding: 0
      border-top: 1px solid #000
      border-bottom: 1px solid #393939

    li
      border-top: 1px solid #393939
      border-bottom: 1px solid #000
      height: 2.0em
      line-height: 2.0em
      padding-left: 1.6em

      &:hover
        background-color: #090909
        background-color: rgba(9, 9, 9, 0.4)

    a
      text-decoration: none
      color: inherit

      &:hover
        color: #F0F0F0
